{
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"root": true,
	"globals": {
		"jQuery": "readonly",
		"mw": "readonly",
		"Map": "readonly"
	},
	"rules": {
		// default rules we don't like
		"array-bracket-spacing": "off",
		"comma-dangle": "off",
		"computed-property-spacing": "off",
		"eqeqeq": "off",
		"es-x/no-array-prototype-includes": "off",
		"indent": "off",
		"jsdoc/no-undefined-types": "off",
		"jsdoc/require-param": "off",
		"jsdoc/require-returns": "off",
		"max-len": "off",
		"no-alert": "off",
		"no-jquery/no-class-state": "off",
		"no-jquery/no-global-selector": "off",
		"no-shadow": "off",
		"no-tabs": "off",
		"object-curly-spacing": "off",
		"spaced-comment": "off",
		"space-before-function-paren": "off",
		"space-in-parens": "off",
		"template-curly-spacing": "off",
		"unicorn/prefer-includes": "off", // bug in the rule. causes a bug in Popups.js

		// non-default rules we do like
		"no-nested-ternary": "error",

		// rules we should probably fix someday
		"camelcase": ["warn", {"properties": "never"}],
		"es-x/no-object-values": "warn",
		"mediawiki/class-doc": "warn",
		"new-cap": "warn",
		"no-jquery/no-constructor-attributes": "warn",
		"no-jquery/no-each-util": "warn",
		"no-jquery/no-extend": "warn",
		"no-jquery/no-grep": "warn",
		"no-jquery/no-in-array": "warn",
		"no-jquery/no-map-util": "warn",
		"no-jquery/no-parse-html-literal": "warn",
		"no-jquery/no-sizzle": "warn",
		"no-loop-func": "warn",
		"no-new": "warn",
		"no-script-url": "warn",
		"no-unused-expressions": "warn",
		"no-use-before-define": "warn",
		"no-var": "warn",
		"unicorn/prefer-string-slice": "warn"
	}
}
